{{#if addNewQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="name">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional information</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showQuestionForm'}}>New Question</button>
{{/if}}
