{{#if addNewQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="name">Author</label>
        {{input class="form-control" value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="question">Question</label>
        {{input class="form-control" value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional information</label>
        {{input class="form-control" value=notes id="notes"}}
      </div>

      <button class="btn btn-success"{{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'showQuestionForm'}}>New Question</button>
{{/if}}
