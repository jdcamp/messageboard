{{#if updateQuestionForm}}
  <div class='update-form'>
    <form>
      <div class="form-group">
        <label for="name">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>


      <div class="form-group">
        <label for="notes">Additional infomation</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <div class="form-group">
        <label for="title">Question</label>
        {{input value=title id="title" placeholder=question.title}}
      </div>
      <button class="btn btn-primary" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info" {{action 'updateQuestion' question}}>Update</button>
{{/if}}
